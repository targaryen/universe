{
  "properties": {
    "service": {
      "description": "Overall service configuration for Aqua Gateway",
      "type": "object",
      "properties": {
        "name": {
          "description": "Display name for the service on the DC/OS dashboard",
          "type": "string",
          "default": "aqua-gateway"
        },
        "cpus": {
          "description": "CPU allocation for the Aqua Gateway instance",
          "type": "number",
          "default": 0.5,
          "minimum": 0.05
        },
        "mem": {
          "description": "Memory (MB) allocation for the Aqua Gateway instance",
          "type": "number",
          "default": 256.0,
          "minimum": 64.0
        },
        "instances": {
          "description": "Number of Aqua Gateway instances to deploy",
          "type": "integer",
          "default": 1
        },
        "port": {
          "description": "Port to run the Aqua Gateway SSH connection on",
          "type": "integer",
          "default": 3622
        }
      },
      "required":[
        "name",
        "cpus",
        "mem",
        "instances",
        "port"
      ]
    },
    "environment": {
      "description": "Environment configuration for Aqua",
      "properties": {
        "dbHost": {
          "description": "Aqua Postgres hostname",
          "type": "string"
        },
        "dbPort": {
          "description": "Aqua Postgres hostname",
          "type": "integer",
          "default": 5432
        },
        "dbDatabase": {
          "description": "Aqua Postgres database name",
          "type": "string",
          "default": "aqua"
        },
        "dbAuditDatabase": {
          "description": "Aqua Postgres audit database name",
          "type": "string",
          "default": "audit"
        },
        "dbUsername": {
          "description": "Aqua Postgres database user",
          "type": "string",
          "default": "aqua"
        },
        "dbPassword": {
          "description": "Aqua Postgres database password",
          "type": "string"
        }
      },
      "required":[
        "dbHost",
        "dbPort",
        "dbDatabase",
        "dbAuditDatabase",
        "dbUsername",
        "dbPassword"
      ]
    },
    "advanced": {
      "description": "Advanced configuration for Aqua Gateway",
      "type": "object",
      "properties": {
        "dockercfgLocation": {
          "description": ".dockercfg location on Mesos agent nodes. Aqua containers are private by default; this config must contain permissions to access.",
          "type": "string",
          "default": "file:///home/core/docker.tar.gz"
        },
        "acceptedResourceRole": {
          "description": "Accepted resource role restriction for service",
          "type": "string",
          "default": "*"
        }
      }
    }
  }
}
