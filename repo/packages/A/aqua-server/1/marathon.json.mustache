{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "instances": {{service.instances}},
  "acceptedResourceRoles": [
    "{{advanced.acceptedResourceRole}}"
  ],
  "constraints": [
    {{#advanced.extraConstraintName}}
      ["{{advanced.extraConstraintName}}", "LIKE", "{{advanced.extraConstraintValue}}"],
    {{/advanced.extraConstraintName}}
    ["hostname", "UNIQUE"]
  ],
  "env": {
    "SCALOCK_DBUSER": "{{environment.dbUsername}}",
    "SCALOCK_DBPASSWORD": "{{environment.dbPassword}}",
    "SCALOCK_DBNAME": "{{environment.dbDatabase}}",
    "SCALOCK_DBHOST": "{{environment.dbHost}}",
    "SCALOCK_DBPORT": "{{environment.dbPort}}",
    "SCALOCK_AUDIT_DBUSER": "{{environment.dbUsername}}",
    "SCALOCK_AUDIT_DBPASSWORD": "{{environment.dbPassword}}",
    "SCALOCK_AUDIT_DBNAME": "{{environment.dbAuditDatabase}}",
    "SCALOCK_AUDIT_DBHOST": "{{environment.dbHost}}",
    "SCALOCK_AUDIT_DBPORT": "{{environment.dbPort}}",
    "SCALOCK_KERNEL_MODE_ENABLED": "{{advanced.scalockKernelModeEnabled}}",
    "ADMIN_PASSWORD": "{{environment.scalockAdminPassword}}",
    "BATCH_INSTALL_TOKEN": "{{environment.scalockToken}}",
    "BATCH_INSTALL_NAME": "{{advanced.batchInstallName}}",
    "BATCH_INSTALL_GATEWAY": "{{environment.scalockGatewayEndpoint}}",
    "BATCH_INSTALL_ENFORCE_MODE": "{{advanced.batchInstallEnforceMode}}",
    "SCALOCK_LOG_LEVEL": "{{advanced.scalockLogLevel}}",
    "LICENSE_TOKEN": "{{environment.scalockLicense}}",
    "AUTHORIZATION_HEADER": "{{advanced.authorizationHeader}}"
  },
  "labels": {
    "AGENT_FILL": "true"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.server}}",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        {
          "hostPort": {{service.port}},
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "parameters": [
        {
          "key": "volume",
          "value": "/var/run/docker.sock:/var/run/docker.sock"
        },
        {
          "key": "user",
          "value": "root"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "port": {{service.port}},
      "protocol": "HTTP",
      "gracePeriodSeconds": 120,
      "intervalSeconds": 60,
      "timeoutSeconds": 30,
      "maxConsecutiveFailures": 5
    }
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
